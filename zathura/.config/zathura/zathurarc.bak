### Settings from original zathurarc ###
set selection-clipboard true
set scroll-step 100
set render-loading              true

### General recoloring settings ###
# Allow recoloring
set recolor "true"
# Don't allow original hue when recoloring
set recolor-keephue "false"
# Don't keep original image colors while recoloring
set recolor-reverse-video "false"

### Theming ###
# Command line completion entries
set completion-fg "#c6c9c5"
set completion-bg "#131215"

# Command line completion group elements
set completion-group-fg "#A59E68"
set completion-group-bg "#131215"

# Current command line completion element
set completion-highlight-fg "#131215"
set completion-highlight-bg "#c6c9c5"

# Default foreground/background color
# set default-fg # TODO
set default-bg rgba(19,18,21,1)

# Input bar
set inputbar-fg "#c6c9c5"
set inputbar-bg "#131215"

# Notification
set notification-fg "#c6c9c5"
set notification-bg "#131215"

# Error notification
set notification-error-fg "#c6c9c5"
set notification-error-bg "#5F9268"

# Warning notification
set notification-warning-fg "#c6c9c5"
set notification-warning-bg "#5F9268"

# Tab - TODO
# set tabbar-fg
# set tabbar-bg

# Focused tab - TODO
# set tabbar-focus-fg
# set tabbar-focus-bg

# Status bar
set statusbar-fg "#c6c9c5"
set statusbar-bg "#131215"

# Highlighting parts of the document (e.g. show search results)
set highlight-color "#A59E68"
set highlight-active-color "#A59E68"

# Represent light/dark colors in recoloring mode
set recolor-lightcolor rgba(0,0,0,0)
set recolor-darkcolor "#c6c9c5"

# "Loading..." text
set render-loading-fg "#c6c9c5"
set render-loading-bg "#131215"

# Index mode
set index-fg "#c6c9c5"
set index-bg "#131215"

# Selected element in index mode
set index-active-fg "#131215"
set index-active-bg "#c6c9c5"
