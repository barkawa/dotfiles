### Settings from original zathurarc ###
set selection-clipboard true
set scroll-step 100
set render-loading              true

### General recoloring settings ###
# Allow recoloring
set recolor "true"
# Don't allow original hue when recoloring
set recolor-keephue "false"
# Don't keep original image colors while recoloring
set recolor-reverse-video "false"

### Theming ###
# Command line completion entries
set completion-fg "#c7c6c5"
set completion-bg "#221d18"

# Command line completion group elements
set completion-group-fg "#aa845f"
set completion-group-bg "#221d18"

# Current command line completion element
set completion-highlight-fg "#221d18"
set completion-highlight-bg "#c7c6c5"

# Default foreground/background color
# set default-fg # TODO
set default-bg rgba(34,29,24,1)

# Input bar
set inputbar-fg "#c7c6c5"
set inputbar-bg "#221d18"

# Notification
set notification-fg "#c7c6c5"
set notification-bg "#221d18"

# Error notification
set notification-error-fg "#c7c6c5"
set notification-error-bg "#af927d"

# Warning notification
set notification-warning-fg "#c7c6c5"
set notification-warning-bg "#af927d"

# Tab - TODO
# set tabbar-fg
# set tabbar-bg

# Focused tab - TODO
# set tabbar-focus-fg
# set tabbar-focus-bg

# Status bar
set statusbar-fg "#c7c6c5"
set statusbar-bg "#221d18"

# Highlighting parts of the document (e.g. show search results)
set highlight-color "#aa845f"
set highlight-active-color "#aa845f"

# Represent light/dark colors in recoloring mode
set recolor-lightcolor rgba(0,0,0,0)
set recolor-darkcolor "#c7c6c5"

# "Loading..." text
set render-loading-fg "#c7c6c5"
set render-loading-bg "#221d18"

# Index mode
set index-fg "#c7c6c5"
set index-bg "#221d18"

# Selected element in index mode
set index-active-fg "#221d18"
set index-active-bg "#c7c6c5"
