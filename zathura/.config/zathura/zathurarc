### User settings ###
set selection-clipboard true
set scroll-step 100
set recolor-keephue true

### General recoloring settings ###
# Allow recoloring
set recolor "true"
# Don't allow original hue when recoloring
set recolor-keephue "false"
# Don't keep original image colors while recoloring
set recolor-reverse-video "false"

### Theming ###
# Command line completion entries
set completion-fg "#d5c4a1"
set completion-bg "#282828"

# Command line completion group elements
set completion-group-fg "#b8bb26"
set completion-group-bg "#282828"

# Current command line completion element
set completion-highlight-fg "#282828"
set completion-highlight-bg "#d5c4a1"

# Default foreground/background color
# set default-fg # TODO
set default-bg rgba(40,40,40,1)

# Input bar
set inputbar-fg "#d5c4a1"
set inputbar-bg "#282828"

# Notification
set notification-fg "#d5c4a1"
set notification-bg "#282828"

# Error notification
set notification-error-fg "#d5c4a1"
set notification-error-bg "#fb4934"

# Warning notification
set notification-warning-fg "#d5c4a1"
set notification-warning-bg "#fb4934"

# Tab - TODO
# set tabbar-fg
# set tabbar-bg

# Focused tab - TODO
# set tabbar-focus-fg
# set tabbar-focus-bg

# Status bar
set statusbar-fg "#d5c4a1"
set statusbar-bg "#282828"

# Highlighting parts of the document (e.g. show search results)
set highlight-color "#b8bb26"
set highlight-active-color "#b8bb26"

# Represent light/dark colors in recoloring mode
set recolor-lightcolor rgba(0,0,0,0)
set recolor-darkcolor "#d5c4a1"

# "Loading..." text
set render-loading-fg "#d5c4a1"
set render-loading-bg "#282828"

# Index mode
set index-fg "#d5c4a1"
set index-bg "#282828"

# Selected element in index mode
set index-active-fg "#282828"
set index-active-bg "#d5c4a1"
