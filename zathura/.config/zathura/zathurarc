### Settings from original zathurarc ###
set selection-clipboard true
set scroll-step 100
set render-loading              true

### General recoloring settings ###
# Allow recoloring
set recolor "true"
# Don't allow original hue when recoloring
set recolor-keephue "false"
# Don't keep original image colors while recoloring
set recolor-reverse-video "false"

### Theming ###
# Command line completion entries
set completion-fg "#e6ddc9"
set completion-bg "#1b1916"

# Command line completion group elements
set completion-group-fg "#CD9B37"
set completion-group-bg "#1b1916"

# Current command line completion element
set completion-highlight-fg "#1b1916"
set completion-highlight-bg "#e6ddc9"

# Default foreground/background color
# set default-fg # TODO
set default-bg rgba(27,25,22,1)

# Input bar
set inputbar-fg "#e6ddc9"
set inputbar-bg "#1b1916"

# Notification
set notification-fg "#e6ddc9"
set notification-bg "#1b1916"

# Error notification
set notification-error-fg "#e6ddc9"
set notification-error-bg "#957059"

# Warning notification
set notification-warning-fg "#e6ddc9"
set notification-warning-bg "#957059"

# Tab - TODO
# set tabbar-fg
# set tabbar-bg

# Focused tab - TODO
# set tabbar-focus-fg
# set tabbar-focus-bg

# Status bar
set statusbar-fg "#e6ddc9"
set statusbar-bg "#1b1916"

# Highlighting parts of the document (e.g. show search results)
set highlight-color "#CD9B37"
set highlight-active-color "#CD9B37"

# Represent light/dark colors in recoloring mode
set recolor-lightcolor rgba(0,0,0,0)
set recolor-darkcolor "#e6ddc9"

# "Loading..." text
set render-loading-fg "#e6ddc9"
set render-loading-bg "#1b1916"

# Index mode
set index-fg "#e6ddc9"
set index-bg "#1b1916"

# Selected element in index mode
set index-active-fg "#1b1916"
set index-active-bg "#e6ddc9"
